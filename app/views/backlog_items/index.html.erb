<h1>Listing backlog_items</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Cost</th>
    <th>Priority</th>
    <th>Backlog</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @backlog_items.each do |backlog_item| %>
  <tr>
    <td><%= backlog_item.name %></td>
    <td><%= backlog_item.description %></td>
    <td><%= backlog_item.cost %></td>
    <td><%= backlog_item.priority %></td>
    <td><%= backlog_item.backlog %></td>
    <td><%= link_to 'Show', backlog_item %></td>
    <td><%= link_to 'Edit', edit_backlog_item_path(backlog_item) %></td>
    <td><%= link_to 'Destroy', backlog_item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

